<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".PostJobFragment">


    <LinearLayout
        android:id="@+id/post_section"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post a job"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:fontFamily="@font/lexend_deca"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="10dp" />
        <EditText
            android:id="@+id/job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_custom"
            android:fontFamily="@font/lexend_deca"
            android:hint="Job title"
            android:includeFontPadding="true"
            android:inputType="text"
            android:minHeight="50dp"
            android:paddingStart="10dp"
            android:textColor="#0091EA"
            android:textColorHint="#7ACAEBFF"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tloc"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:background="#8D313131"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />


        <EditText
            android:id="@+id/last_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_custom"
            android:fontFamily="@font/lexend_deca"
            android:hint="Last date to apply"
            android:includeFontPadding="true"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="#0091EA"
            android:textColorHint="#7ACAEBFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/job_typ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_custom"
            android:fontFamily="@font/lexend_deca"
            android:hint="On-site / Remote ?"
            android:includeFontPadding="true"
            android:inputType="text"
            android:minHeight="50dp"
            android:paddingLeft="10dp"
            android:textColor="#0091EA"
            android:textColorHint="#7ACAEBFF"
            android:textSize="16sp" />


        <Button
            android:id="@+id/postb"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:backgroundTint="#2A59A8"
            android:fontFamily="@font/lexend_deca"
            android:padding="10dp"
            android:text="Post"
            android:textColor="#FFFCFC"
            android:textSize="16sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/closeb"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:backgroundTint="#FF5252"
            android:fontFamily="@font/lexend_deca"
            android:padding="10dp"
            android:text="Close"
            android:textColor="#FFFCFC"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>